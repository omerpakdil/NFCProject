{
  "expo": {
    "name": "NFC Reader Pro",
    "slug": "nfc-reader-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nfcreaderpro.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Bu uygulama QR kodları taramak için kameraya erişim gerektirir.",
        "NFCReaderUsageDescription": "Bu uygulama NFC etiketlerini okumak ve yazmak için NFC'ye erişim gerektirir."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#121212"
      },
      "permissions": [
        "NFC",
        "VIBRATE"
      ],
      "package": "com.nfcreaderpro.app"
    },
    "plugins": [
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "nfc-reader-pro"
      }
    },
    "scheme": "nfc-reader-pro",
    "fonts": [
      {
        "asset": "assets/fonts/Inter-Regular.woff2",
        "family": "Inter",
        "weight": "400"
      },
      {
        "asset": "assets/fonts/Inter-Medium.woff2",
        "family": "Inter",
        "weight": "500"
      },
      {
        "asset": "assets/fonts/Inter-SemiBold.woff2",
        "family": "Inter",
        "weight": "600"
      }
    ]
  }
}
